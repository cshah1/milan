<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>org.westzone.milan.server.GreetingServiceImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>controllerServlet</servlet-name>
    <servlet-class>org.westzone.milan.servlets.MilanServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/milanregistration2014/greet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controllerServlet</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>MilanRegistration2014.html</welcome-file>
  </welcome-file-list>
</web-app>